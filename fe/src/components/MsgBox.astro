---
interface Props {
  column: number
  row: number
  classNames?: [string]
}

const classNames = Astro.props.classNames || []
---
<div class:list={['msgbox', ...classNames]}>
  <slot />
</div>

<style>
  :global(.msgbox) {
    padding: 30px;

    h1 {
      font-size: 1.6em;
      margin-bottom: 20px;
    }

    p {
      margin-top: 20px;
    }

    a {
      text-decoration: underline;
    }
  }

  .whitebox {
    background-color: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 10px;
    margin: 12px;
  }
</style>
